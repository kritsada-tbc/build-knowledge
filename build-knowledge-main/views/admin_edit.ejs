<script>
async function openMediaModal() {
  const modal = document.getElementById("mediaModal");
  const grid = document.getElementById("mediaGrid");

  modal.style.display = "flex";
  grid.innerHTML = "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î...";

  const res = await fetch("/admin/media/json");
  const files = await res.json();

  grid.innerHTML = "";
  files.forEach(f => {
    const item = document.createElement("div");
    item.style.cursor = "pointer";
    item.innerHTML = `
      <img src="${f.url}" style="width:100%;height:100px;object-fit:cover;border-radius:8px;">
      <div style="font-size:12px;margin-top:4px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">
        ${f.original_name}
      </div>
    `;

    item.onclick = () => insertImage(f.url);
    grid.appendChild(item);
  });
}

function closeMediaModal() {
  document.getElementById("mediaModal").style.display = "none";
}

function insertImage(url) {
  const textarea = document.querySelector("textarea[name='content_md']");
  const markdown = `\n![image](${url})\n`;

  const start = textarea.selectionStart;
  const end = textarea.selectionEnd;

  textarea.value =
    textarea.value.substring(0, start) +
    markdown +
    textarea.value.substring(end);

  textarea.focus();
  textarea.selectionStart = textarea.selectionEnd =
    start + markdown.length;

  closeMediaModal();
}
</script>
