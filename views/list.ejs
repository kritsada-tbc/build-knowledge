<section class="section-soft">
  <div class="section-head">
    <div>
      <h1><%= pageTitle %></h1>
      <p>รายการทั้งหมด</p>
    </div>
  </div>

  <% if (!posts || posts.length === 0) { %>
    <p class="muted">ยังไม่มีรายการ</p>
  <% } else { %>
    <div class="grid">
      <% posts.forEach(p => { %>
        <a class="card" href="/article/<%= p.slug %>">
          <h3><%= p.title %></h3>
          <p><%= p.excerpt || "—" %></p>
        </a>
      <% }) %>
    </div>
  <% } %>
</section>
