<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/public/theme.css">
</head>
<body>
  <div class="container">
    <h1>üìÅ Media Library</h1>

    <form action="/admin/media/upload" method="post" enctype="multipart/form-data">
      <input type="file" name="file" required>
      <button class="btn primary">Upload</button>
    </form>

    <hr>

    <div style="display:grid;grid-template-columns:repeat(auto-fill,160px);gap:12px;">
      <% files.forEach(f => { %>
        <div style="border:1px solid #ddd;padding:8px;">
          <img src="<%= f.url %>" style="width:100%;height:120px;object-fit:cover">
          <small><%= f.original_name %></small><br>
          <input type="text" value="<%= f.url %>" onclick="this.select()" readonly>
          <form action="/admin/media/<%= f.id %>/delete" method="post">
            <button style="color:red">‡∏•‡∏ö</button>
          </form>
          <form action="/admin/media/upload"
                method="post"
                enctype="multipart/form-data">
            <input type="file" name="file" required>
            <button type="submit">Upload</button>
          </form>

        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
