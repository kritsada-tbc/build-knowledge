<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title>Media Library</title>
</head>
<body>
  <h1>Media Library</h1>

  <form action="/admin/media/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" required>
    <button type="submit">อัปโหลดรูป</button>
  </form>

  <hr>

  <% if (!files.length) { %>
    <p>ยังไม่มีไฟล์</p>
  <% } else { %>
    <% files.forEach(f => { %>
      <div style="margin-bottom:12px">
        <img src="<%= f.url %>" style="max-width:200px;display:block">
        <input style="width:100%" value="<%= f.url %>" readonly>
      </div>
    <% }) %>
  <% } %>

  <a href="/admin/posts">← กลับ</a>
</body>
</html>
