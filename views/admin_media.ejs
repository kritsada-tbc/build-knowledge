<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title>Media</title>
</head>
<body>
  <h1>ไฟล์อัปโหลด</h1>
  <a href="/admin/posts">← กลับ</a>
  <hr>

  <% if (!files.length) { %>
    <p>ยังไม่มีไฟล์</p>
  <% } else { %>
    <% files.forEach(f => { %>
      <div style="margin-bottom:10px">
        <a href="<%= f.url %>" target="_blank"><%= f.name %></a>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
