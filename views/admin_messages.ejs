<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8">
  <title>ข้อความติดต่อ</title>
</head>
<body>
  <h1>ข้อความติดต่อ</h1>
  <a href="/admin/posts">← กลับ</a>
  <hr>

  <% if (!messages.length) { %>
    <p>ยังไม่มีข้อความ</p>
  <% } else { %>
    <% messages.forEach(m => { %>
      <div style="margin-bottom:20px">
        <b><%= m.name %></b> (<%= m.contact %>)<br>
        <small><%= new Date(m.created_at).toLocaleString("th-TH") %></small>
        <p><%= m.message %></p>
        <hr>
      </div>
    <% }) %>
  <% } %>
</body>
</html>
