<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= pageTitle || "ข้อความติดต่อ" %></title>
  <style>
    :root{ --bg:#0b1220; --text:#e7eefc; --muted:#97a3b6; --line: rgba(255,255,255,.10); --radius:14px; }
    *{ box-sizing:border-box; }
    body{ margin:0; padding:18px; font-family: ui-sans-serif, system-ui, "Noto Sans Thai", Arial;
      color:var(--text);
      background: linear-gradient(180deg, #070c17, var(--bg)); }
    a{ color:inherit; text-decoration:none; }
    .wrap{ max-width: 1100px; margin:0 auto; }
    .btn{ padding:10px 12px; border:1px solid var(--line); border-radius:12px; background: rgba(255,255,255,.03); display:inline-flex; cursor:pointer; }
    .btn:hover{ background: rgba(255,255,255,.06); }
    .card{ border:1px solid var(--line); border-radius:var(--radius); background: rgba(255,255,255,.03); padding:14px; margin-top:12px; }
    .small{ color:var(--muted); font-size:12px; }
    .row{ display:flex; justify-content:space-between; gap:10px; flex-wrap:wrap; align-items:center; }
    .tag{ padding:6px 9px; border:1px solid var(--line); border-radius:999px; font-size:11px; color:var(--muted); }
  </style>
</head>
<body>
  <div class="wrap">
    <div class="row">
      <div>
        <h1 style="margin:0;"><%= pageTitle || "ข้อความติดต่อ" %></h1>
        <div class="small">
          <a href="/admin/posts?type=article">← กลับจัดการโพสต์</a> • <a href="/">ดูหน้าเว็บ</a>
        </div>
      </div>

      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <a class="btn" href="/admin/posts?type=article">บทความ</a>
        <a class="btn" href="/admin/posts?type=material">วัสดุ</a>
        <a class="btn" href="/admin/posts?type=tool">เครื่องมือ</a>
        <a class="btn" href="/admin/posts?type=dealer">แหล่งซื้อ</a>
        <a class="btn" href="/admin/ui">ตั้งค่า UI</a>
        <form method="post" action="/admin/logout" style="margin:0;">
          <button class="btn" type="submit">ออกจากระบบ</button>
        </form>
      </div>
    </div>

    <% if (!msgs || msgs.length===0) { %>
      <div class="card">ยังไม่มีข้อความจากหน้า /contact</div>
    <% } else { msgs.forEach(m => { %>
      <div class="card">
        <div class="row">
          <div>
            <b><%= m.subject || "(ไม่มีหัวข้อ)" %></b>
            <div class="small">
              จาก: <%= m.name %> • ติดต่อ: <%= m.contact || "-" %> •
              <%= m.created_at ? new Date(m.created_at).toLocaleString("th-TH") : "-" %>
            </div>
          </div>
          <div style="display:flex; gap:10px; flex-wrap:wrap;">
            <span class="tag"><%= m.is_read ? "อ่านแล้ว" : "ยังไม่อ่าน" %></span>

            <% if (!m.is_read) { %>
              <form method="post" action="/admin/messages/<%= m.id %>/read" style="margin:0;">
                <button class="btn" type="submit">ทำเป็นอ่านแล้ว</button>
              </form>
            <% } %>

            <form method="post" action="/admin/messages/<%= m.id %>/delete" style="margin:0;" onsubmit="return confirm('ลบข้อความนี้?');">
              <button class="btn" type="submit">ลบ</button>
            </form>
          </div>
        </div>

        <div style="margin-top:10px; white-space:pre-wrap;"><%= m.message %></div>
      </div>
    <% }) } %>
  </div>
</body>
</html>
