<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>
    <%= typeof pageTitle !== "undefined"
      ? pageTitle
      : (site.site_name || "เว็บไซต์") %>
  </title>

  <meta name="description" content="<%= site.meta_description || '' %>">

  <link rel="stylesheet" href="/public/theme.css">
</head>
<body>

  <!-- Topbar -->
  <div class="topbar">
    <div class="container nav">
      <a class="brand" href="/">
        <div class="logo"><%= site.logo_text || "B" %></div>
        <div>
          <%= site.site_name || "เว็บไซต์" %>
          <div class="small"><%= site.site_tagline || "" %></div>
        </div>
      </a>

      <nav class="navlinks">
        <a href="/articles">บทความ</a>
        <a href="/materials">วัสดุ</a>
        <a href="/tools">เครื่องมือ</a>
        <a href="/dealers">แหล่งซื้อ</a>
      </nav>

      <div class="actions">
        <a class="btn" href="/contact">ติดต่อ</a>
      </div>
    </div>
  </div>

  <main class="container">
    <%- body %>
  </main>

  <footer class="site-footer">
    <div class="container">
      © <%= new Date().getFullYear() %> <%= site.site_name || "" %>
    </div>
  </footer>

</body>
</html>
