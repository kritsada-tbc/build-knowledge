<% const SITE = (typeof site !== "undefined" && site) ? site : {}; %>
<!doctype html>
<html lang="th">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/public/theme.css">
  <title><%= pageTitle %> • <%= (SITE.site_name || "ศูนย์ความรู้วัสดุก่อสร้าง") %></title>
  <style>
    :root{ --bg:#0b1220; --text:#e7eefc; --muted:#97a3b6; --line: rgba(255,255,255,.10); --radius:16px; --max:900px; }
    *{ box-sizing:border-box; }
    body{ margin:0; padding:18px; font-family: ui-sans-serif, system-ui, "Noto Sans Thai", Arial; color:var(--text);
      background: linear-gradient(180deg, #070c17, var(--bg)); }
    .wrap{ max-width:var(--max); margin:0 auto; }
    a{ color:inherit; text-decoration:none; }
    .btn{ padding:10px 12px; border:1px solid var(--line); border-radius:12px; background: rgba(255,255,255,.03); display:inline-flex; }
    .btn:hover{ background: rgba(255,255,255,.06); }
    .card{ border:1px solid var(--line); border-radius:var(--radius); background: rgba(255,255,255,.03); padding:14px; }
    label{ display:block; margin:10px 0 6px; color:var(--muted); font-size:13px; }
    input, textarea{ width:100%; padding:10px 12px; border-radius:12px; border:1px solid var(--line);
      background: rgba(0,0,0,.18); color:var(--text); outline:none; }
    textarea{ min-height: 120px; }
    .ok{ margin:10px 0; padding:10px 12px; border:1px solid rgba(80,255,150,.35); background: rgba(80,255,150,.08); border-radius:12px; }
    .err{ margin:10px 0; padding:10px 12px; border:1px solid rgba(255,80,80,.35); background: rgba(255,80,80,.08); border-radius:12px; }
  </style>
</head>
<body>
  <div class="wrap">
    <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start; margin-bottom:12px;">
      <div>
        <h1 style="margin:0;"><%= pageTitle %></h1>
        <div style="color:var(--muted); font-size:12px;"><a href="/">← กลับหน้าแรก</a></div>
      </div>
      <div style="display:flex; gap:10px; flex-wrap:wrap;">
        <a class="btn" href="/articles">บทความ</a>
        <a class="btn" href="/materials">วัสดุ</a>
        <a class="btn" href="/tools">เครื่องมือ</a>
        <a class="btn" href="/dealers">แหล่งซื้อ</a>
      </div>
    </div>

    <% if (ok) { %><div class="ok"><%= ok %></div><% } %>
    <% if (error) { %><div class="err"><%= error %></div><% } %>

    <div class="card">
      <form method="post" action="/contact/send">
        <label>ชื่อ *</label>
        <input name="name" placeholder="ชื่อผู้ติดต่อ" required />

        <label>ช่องทางติดต่อ (อีเมล/เบอร์/ไลน์)</label>
        <input name="contact" placeholder="เช่น 08x-xxx-xxxx / email / Line ID" />

        <label>หัวข้อ</label>
        <input name="subject" placeholder="เช่น ขอซื้อโฆษณา / ขอฝากลงบทความ / ขอให้เขียนหัวข้อ" />

        <label>ข้อความ *</label>
        <textarea name="message" placeholder="พิมพ์รายละเอียด..." required></textarea>

        <div style="margin-top:12px; display:flex; gap:10px; flex-wrap:wrap;">
          <button class="btn" type="submit">ส่งข้อความ</button>
          <a class="btn" href="/admin/login">Admin</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
